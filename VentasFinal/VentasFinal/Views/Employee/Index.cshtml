@model IEnumerable<VentasFinal.Models.Employee>

@{
    ViewBag.Title = "EMPLEADOS";
}

<h2 class="w3-text-pink">Relación de Empleados</h2>
<br />
<p>
    <i class="fa fa-user w3-xlarge"></i>
    @Html.ActionLink("Nuevo Empleado", "Create")
</p>
<table class="table">
     <tr>
         <th>
             @Html.DisplayNameFor(model => model.DocumentType.Document)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.FirstName)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.LastName)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.Salary)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.BonusPercent)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.DateOfBirth)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.StartTime)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.Email)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.URL)
         </th>
         <th> Opciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentType.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BonusPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.EmployeeID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.EmployeeID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.EmployeeID })
            </td>
        </tr>
    }

</table>
